FROM node:18-alpine

# Instalar dependências do sistema
RUN apk add --no-cache \
    mysql-client \
    curl \
    python3 \
    make \
    g++

# Definir diretório de trabalho
WORKDIR /app

# Copiar package.json se existir
COPY package*.json ./

# Instalar dependências Node.js básicas para RPG
RUN npm init -y && \
    npm install express mysql2 cors dotenv jsonwebtoken helmet morgan

# Copiar código da aplicação
COPY . .

# Criar diretórios necessários
RUN mkdir -p logs uploads

# Expor porta
EXPOSE 5000

# Comando de inicialização
CMD ["node", "web-server-hybrid.js"]
