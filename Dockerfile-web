# Dockerfile com servidor web dinâmico para QR Code
FROM node:18-alpine

# Instalar dependências do sistema
RUN apk add --no-cache \
    git \
    bash \
    curl \
    wget \
    unzip \
    procps

# Criar diretório de trabalho
WORKDIR /app

# Instalar Expo CLI e ngrok globalmente
RUN npm install -g @expo/cli@latest @expo/ngrok@latest

# Baixar o projeto
RUN wget https://github.com/SamuelMauli/Rpg.kt/archive/refs/heads/main.zip && \
    unzip main.zip && \
    mv Rpg.kt-main/mobile/* . && \
    rm -rf Rpg.kt-main main.zip

# Instalar dependências do projeto primeiro
RUN npm install

# Instalar dependências do servidor web
RUN npm install express qrcode

# Copiar servidor web dinâmico
COPY web-server.js /app/

# Expor portas
EXPOSE 8081
EXPOSE 19000
EXPOSE 19001
EXPOSE 19002

# Script de inicialização simplificado
RUN echo '#!/bin/bash\n\
echo "🚀 Iniciando Old Dragon RPG..."\n\
echo "📡 Iniciando Expo com tunnel..."\n\
npx expo start --tunnel > /tmp/expo.log 2>&1 &\n\
echo "⏳ Aguardando tunnel conectar (30s)..."\n\
sleep 30\n\
echo "🖥️ Iniciando servidor web..."\n\
node web-server.js\n\
' > /app/start.sh && chmod +x /app/start.sh

CMD ["/app/start.sh"]
