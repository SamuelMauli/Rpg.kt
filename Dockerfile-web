# Dockerfile com servidor web dinâmico para QR Code
FROM node:18-alpine

# Instalar dependências do sistema
RUN apk add --no-cache \
    git \
    bash \
    curl \
    wget \
    unzip \
    procps

# Criar diretório de trabalho
WORKDIR /app

# Instalar Expo CLI e dependências
RUN npm install -g @expo/cli@latest @expo/ngrok@latest
RUN npm install express qrcode

# Baixar o projeto
RUN wget https://github.com/SamuelMauli/Rpg.kt/archive/refs/heads/main.zip && \
    unzip main.zip && \
    mv Rpg.kt-main/mobile/* . && \
    rm -rf Rpg.kt-main main.zip

# Copiar servidor web dinâmico
COPY web-server.js /app/

# Instalar dependências do projeto
RUN npm install

# Expor portas
EXPOSE 8081
EXPOSE 19000
EXPOSE 19001
EXPOSE 19002

# Script de inicialização com detecção dinâmica
RUN echo '#!/bin/bash\n\
echo "🚀 Iniciando Old Dragon RPG com detecção dinâmica..."\n\
echo "📡 Iniciando Expo com tunnel..."\n\
npx expo start --tunnel --port 19000 > /tmp/expo.log 2>&1 &\n\
EXPO_PID=$!\n\
echo "⏳ Aguardando tunnel conectar..."\n\
sleep 15\n\
echo "🖥️ Iniciando servidor web dinâmico..."\n\
echo "📱 QR Code será detectado automaticamente"\n\
echo "🔗 Acesse: http://localhost:8081"\n\
node web-server.js\n\
' > /app/start.sh && chmod +x /app/start.sh

CMD ["/app/start.sh"]
